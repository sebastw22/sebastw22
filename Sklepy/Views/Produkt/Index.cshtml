@model IEnumerable<Sklepy.Models.DB.Produkt>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produkty w sklepach</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IloscOgolem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            Nazwa rodzaju produktu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IloscOgolem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RodzajProd.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProduktID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProduktID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProduktID })
        </td>
    </tr>
}

</table>
